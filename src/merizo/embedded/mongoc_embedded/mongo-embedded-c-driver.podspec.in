Pod::Spec.new do |s|

  s.name         = "merizo-embedded-c-driver"
  s.version      = "@VERSION@"
  s.summary      = "MerizoDB C Driver"

  s.description  = <<-DESC
    merizo-c-driver is a project that includes two libraries:
    libmerizoc, a client library written in C for MerizoDB.
    libbson, a library providing useful routines related to building, parsing, and iterating BSON documents.
                   DESC

  s.homepage     = "https://www.merizodb.com"
  s.author       = { "MerizoDB, Inc" => "cocoapods@merizodb.com" }

  s.license      = { :type => "Apache License, Version 2.0", :file => "iPhoneOS/Frameworks/merizoc.framework/COPYING" }

  s.ios.deployment_target = "11.0"
  s.osx.deployment_target = "10.10"
  s.watchos.deployment_target = "4.3"
  s.tvos.deployment_target = "10.2"

  s.source       = { :http => "https://downloads.merizodb.org/mobile/apple/merizo-c-driver-@VERSION@-@MONGO_VERSION@.tgz",
                     :sha256 => "@SHA256@" }

  s.ios.vendored_frameworks = "iPhoneOS/Frameworks/bson.framework", "iPhoneOS/Frameworks/merizoc.framework"
  s.osx.vendored_frameworks = "MacOS/Frameworks/bson.framework", "MacOS/Frameworks/merizoc.framework"
  s.watchos.vendored_frameworks = "WatchOS/Frameworks/bson.framework", "WatchOS/Frameworks/merizoc.framework"
  s.tvos.vendored_frameworks = "AppleTVOS/Frameworks/bson.framework", "AppleTVOS/Frameworks/merizoc.framework"

end
