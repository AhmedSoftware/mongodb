Pod::Spec.new do |s|

  s.name         = "merizoc_embedded"
  s.version      = "@VERSION@"
  s.summary      = "MerizoDB Embedded C Driver Transport"

  s.description  = <<-DESC
    Library providing a client usable by the regular MerizoDB C Driver that communicates with the MerizoDB Embedded local storage.
                   DESC

  s.homepage     = "https://www.merizodb.com"
  s.author       = { "MerizoDB, Inc" => "cocoapods@merizodb.com" }

  s.license      = { :type => "MerizoDB Embedded License", :file => "iPhoneOS/Frameworks/merizoc_embedded.framework/LICENSE-Embedded.txt" }

  s.ios.deployment_target = "11.0"
  s.watchos.deployment_target = "4.3"
  s.tvos.deployment_target = "10.2"

  s.source       = { :http => "https://downloads.merizodb.org/mobile/apple/merizoc-embedded-sdk-@VERSION@.tgz",
                     :sha256 => "@SHA256@" }

  s.ios.vendored_frameworks = "iPhoneOS/Frameworks/merizoc_embedded.framework"
  s.watchos.vendored_frameworks = "WatchOS/Frameworks/merizoc_embedded.framework"
  s.tvos.vendored_frameworks = "AppleTVOS/Frameworks/merizoc_embedded.framework"

  s.dependency "merizo_embedded", "~> 4.0"
  s.dependency "merizo-c-driver", "~> 1.13"

  # See notes in merizo_embedded.podspec.in.
  s.preserve_path = '**/*.bcsymbolmap'

end
