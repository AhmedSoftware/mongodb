#!/usr/bin/make -f
# -*- makefile -*-
TOOLS=bsondump merizodecrypt merizodump merizoexport merizofiles merizoimport merizoldap merizorestore merizostat merizotop

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1


configure: configure-stamp
configure-stamp:
	dh_testdir

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir

	# THE FOLLOWING LINE IS INTENTIONALLY COMMENTED. 
	# scons 
	#docbook-to-man debian/merizodb.sgml > merizodb.1
	echo -n > debian/merizodb-enterprise-tools.manpages
	for binary in ${TOOLS} ; \
	do \
		if [ -e debian/$$binary.1 ] ; \
		then \
			echo debian/$$binary.1 >> debian/merizodb-enterprise-tools.manpages ; \
		fi ; \
	done

	echo debian/merizo.1 > debian/merizodb-enterprise-shell.manpages
	echo debian/merizod.1 > debian/merizodb-enterprise-server.manpages
	echo debian/merizos.1 > debian/merizodb-enterprise-merizos.manpages

	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# FIXME: scons freaks out at the presence of target files
	# under debian/merizodb.
	#scons -c

	rm -f debian/*.manpages

	rm -rf $(CURDIR)/debian/merizodb-enterprise
	rm -rf $(CURDIR)/debian/merizodb-enterprise-shell
	rm -rf $(CURDIR)/debian/merizodb-enterprise-server
	rm -rf $(CURDIR)/debian/merizodb-enterprise-merizos
	rm -rf $(CURDIR)/debian/merizodb-enterprise-tools
	rm -f config.log
	rm -f merizo
	rm -f merizod
	rm -f merizoimportjson
	rm -f merizocryptd
	rm -f merizoexport
	rm -f merizorestore
	rm -f merizodump
	rm -f merizofiles
	rm -f install_compass
	rm -f .sconsign.dblite
	rm -f libmerizoclient.a
	rm -rf client/*.o
	rm -rf tools/*.o
	rm -rf shell/*.o
	rm -rf .sconf_temp
	rm -f buildscripts/*.pyc 
	rm -f *.pyc
	rm -f buildinfo.cpp
	dh_clean debian/files

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	# THE FOLLOWING LINE IS INTENTIONALLY COMMENTED.
	# scons --prefix=$(CURDIR)/debian/merizodb/usr install
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-shell/usr/bin
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-server/usr/bin
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-merizos/usr/bin
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-tools/usr/bin
	cp -v $(CURDIR)/bin/merizo $(CURDIR)/debian/merizodb-enterprise-shell/usr/bin
	cp -v $(CURDIR)/bin/merizod $(CURDIR)/debian/merizodb-enterprise-server/usr/bin
	cp -v $(CURDIR)/bin/merizocryptd $(CURDIR)/debian/merizodb-enterprise-server/usr/bin
	cp -v $(CURDIR)/bin/merizos $(CURDIR)/debian/merizodb-enterprise-merizos/usr/bin
	cp -v $(CURDIR)/bin/install_compass $(CURDIR)/debian/merizodb-enterprise-tools/usr/bin

	for binary in ${TOOLS} ; \
	do \
	  cp -v $(CURDIR)/bin/$$binary $(CURDIR)/debian/merizodb-enterprise-tools/usr/bin ; \
	done

	mkdir -p $(CURDIR)/debian/merizodb-enterprise-server/etc
	cp $(CURDIR)/debian/merizod.conf $(CURDIR)/debian/merizodb-enterprise-server/etc/merizod.conf 

	mkdir -p $(CURDIR)/debian/merizodb-enterprise-shell/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-server/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-merizos/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/merizodb-enterprise-tools/usr/share/lintian/overrides/
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/merizodb-enterprise-shell/usr/share/lintian/overrides/merizodb-enterprise-shell
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/merizodb-enterprise-server/usr/share/lintian/overrides/merizodb-enterprise-server
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/merizodb-enterprise-merizos/usr/share/lintian/overrides/merizodb-enterprise-merizos
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/merizodb-enterprise-tools/usr/share/lintian/overrides/merizodb-enterprise-tools

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit -pmerizodb-enterprise-server --name=merizod
#	dh_installinfo
	dh_installman
	dh_link
# Appears to be broken on Ubuntu 11.10...?
#	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
